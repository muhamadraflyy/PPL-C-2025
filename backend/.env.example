# Server Configuration
NODE_ENV=development
PORT=5000

# Database MySQL
DB_HOST=localhost
DB_PORT=3306
DB_NAME=skillconnect
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_DIALECT=mysql

# Connection Pool
DB_POOL_MAX=10
DB_POOL_MIN=0
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# JWT Secret
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production
JWT_EXPIRES_IN=7d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Payment Gateway - Midtrans
MIDTRANS_SERVER_KEY=your_midtrans_server_key
MIDTRANS_CLIENT_KEY=your_midtrans_client_key
MIDTRANS_IS_PRODUCTION=false

# Payment Gateway - Xendit (alternative)
XENDIT_SECRET_KEY=your_xendit_secret_key

# Email Service - SendGrid
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@skillconnect.com

# Email Service - SMTP Gmail (Production)
# For Gmail: Use App Password (not regular password)
# Generate at: https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_gmail_app_password
SMTP_FROM_EMAIL=noreply@skillconnect.com

# WhatsApp Cloud API (Meta Business)
# Get credentials from: https://developers.facebook.com/apps
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_permanent_access_token
WHATSAPP_API_VERSION=v18.0
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id

# OTP Configuration
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6
APP_NAME=SkillConnect

# Testing (Optional - for test-otp.js script)
TEST_EMAIL=your-test-email@example.com
TEST_PHONE=628123456789

# File Storage - AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-southeast-1
AWS_S3_BUCKET=skillconnect-uploads

# File Storage - Cloudinary (alternative)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Socket.io
SOCKET_PORT=5001

# Redis (optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug

VITE_API_BASE_URL=http://localhost:5000/api
