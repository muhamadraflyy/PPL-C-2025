{
  "name": "skillconnect-backend",
  "version": "1.0.0",
  "description": "SkillConnect Backend API - Marketplace Jasa dan Skill Lokal",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",

    "migrate": "sequelize db:migrate --config config/config.js --migrations-path src/shared/database/migrations",
    "migrate:undo": "sequelize db:migrate:undo --config config/config.js --migrations-path src/shared/database/migrations",
    "migrate:undo:all": "sequelize db:migrate:undo:all --config config/config.js --migrations-path src/shared/database/migrations",
    "migrate:fresh": "sequelize db:drop --config config/config.js && sequelize db:create --config config/config.js && sequelize db:migrate --config config/config.js --migrations-path src/shared/database/migrations",
    "seed": "node src/shared/database/seeders/seed.js",
    "seed:fresh": "npm run migrate:fresh && npm run seed"

  },

  "keywords": [
    "marketplace",
    "freelance",
    "ddd",
    "nodejs",
    "express",
    "mysql",
    "sequelize"
  ],
  "author": "SkillConnect Team",
  "license": "MIT",
  "dependencies": {
    "@scalar/express-api-reference": "^0.8.25",
    "@sendgrid/mail": "^8.1.0",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-validator": "^7.3.0",
    "google-auth-library": "^9.4.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "midtrans-client": "^1.3.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.10.1",
    "pdfkit": "^0.14.0",
    "sequelize": "^6.35.2",
    "slugify": "^1.6.6",
    "socket.io": "^4.6.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "sequelize-cli": "^6.6.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
